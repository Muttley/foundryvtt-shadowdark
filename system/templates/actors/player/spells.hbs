<section class="tab tab-spells" data-group="primary" data-tab="tab-spells">
	<section class="spells-body">
		<div class="spellcasting-ability">
			<label class="spellcasting-ability-label">
				{{localize "SHADOWDARK.spellcasting_ability"}}:
			</label>
			<select
				name="system.spellcastingAbility"
				style="grid-column: span 2;"
			>
			<option value="">&mdash;</option>
			{{selectOptions
				config.ABILITIES_LONG
				selected=system.spellcastingAbility
				localize=false
			}}
			</select>
		</div>
		<div class="spells-list">
			<table>
				{{#each spells as |tier tid|}}
					<tr class="spell-tier-header">
						<th class="spell-tier-header-padding">
							{{localize 'SHADOWDARK.sheet.player.spells_tier'}} {{tid}}
						</th>
						<th>&nbsp;</th>
					</tr>
					{{#each tier as |spell|}}
						<tr
							class="item {{#if spell.system.lost}}spell-lost{{/if}}"
							data-item-id="{{spell._id}}"
						>
							<td>
								<a
									class="item-control open-item"
									data-item-id="{{spell._id}}"
								>
									{{spell.name}}
								</a>
							</td>
							<td style="text-align: right; padding-right: 4px;">
								{{#unless spell.system.lost}}
									<a
										class="item-control cast-spell"
										data-item-id="{{spell._id}}"
										title="{{localize 'SHADOWDARK.sheet.player.tooltip.cast_spell'}}"
									>
										<i class="fa-solid fa-wand-magic-sparkles"></i>
									</a>
								{{/unless}}
								<a
									class="item-control toggle-spell-lost"
									data-item-id="{{spell._id}}"
									title="{{localize "SHADOWDARK.sheet.player.toggle_spell_lost"}}"
								>
									{{#if spell.system.lost}}
										<i style="color:red;" class="fa-solid fa-xmark"></i>
									{{else}}
										<i style="color:green;" class="fa-solid fa-check"></i>
									{{/if}}
								</a>
							</td>
						</tr>
					{{/each}}
				{{/each}}
			</table>
		</div>
	</section>
</section>
