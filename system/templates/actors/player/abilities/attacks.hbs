<div class="SD-box">
	<div class="header">
		<label>{{localize 'SHADOWDARK.sheet.player.melee_attacks'}}</label>
		<span></span>
	</div>
	<div class="content">
		{{#each attacks.melee as |attack|}}
			<div class="attack">
				<a
					class="rollable"
					data-action="item-attack"
					data-attack-type="melee"
					data-handedness="{{attack.handedness}}"
					data-item-id="{{attack.itemId}}"
				>
					<i class="fa-solid fa-dice-d20"></i>
					{{{attack.display}}}
				</a>
			</div>
		{{/each}}
	</div>
</div>

