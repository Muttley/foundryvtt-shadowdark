<div class="SD-box">
	<div class="header light">
		<label>{{localize 'SHADOWDARK.item_type.armor'}}</label>
	</div>

	<div class="content item-grid">

		<h3>{{localize "SHADOWDARK.item.armor.base_armor.title"}}</h3>
		<select name="system.baseArmor">
			<option value="">&mdash;</option>
			{{selectOptions
				baseArmor
				selected=system.baseArmor
				localize=false
			}}
		</select>

		<h3>{{localize 'SHADOWDARK.item.armor_ac'}}</h3>
		{{numberInput
			system.ac.base
			name="system.ac.base"
			class="ac-value"
			placeholder="0"
		}}

		<h3>{{localize 'SHADOWDARK.item.armor_bonus_attribute'}}</h3>
		<select name="system.ac.attribute">
			<option value="">&mdash;</option>
			{{selectOptions
				config.ARMOR_BONUS_ATTRIBUTES
				selected=system.ac.attribute
				localize=false
			}}
		</select>

		<h3>{{localize 'SHADOWDARK.item.armor_ac_modifier'}}</h3>
		{{numberInput
			system.ac.modifier
			name="system.ac.modifier"
			class="ac-value"
			placeholder="0"
		}}

	</div>
</div>
