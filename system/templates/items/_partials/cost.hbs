<div class="SD-box">
	<div class="header light">
		<label>{{localize 'SHADOWDARK.item.cost'}}</label>
		<span></span>
	</div>
	<div class="content">
		<div class="SD-grid left">
			{{numberInput
				item.system.cost.gp
				name="system.cost.gp"
				class="coin-value"
				placeholder="0"
			}}
			<h3>{{localize 'SHADOWDARK.coins.gp'}}</h3>

			{{numberInput
				item.system.cost.sp
				name="system.cost.sp"
				class="coin-value"
				placeholder="0"
			}}
			<h3>{{localize 'SHADOWDARK.coins.sp'}}</h3>

			{{numberInput
				item.system.cost.cp
				name="system.cost.cp"
				class="coin-value"
				placeholder="0"
			}}
			<h3>{{localize 'SHADOWDARK.coins.cp'}}</h3>
		</div>
	</div>
</div>
