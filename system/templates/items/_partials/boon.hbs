<div class="item-grid">
	<h3>{{localize 'SHADOWDARK.boon.type.label'}}</h3>
	<select name="system.boonType">
		{{selectOptions
			config.BOON_TYPES
			selected=system.boonType
			localize=false
		}}
	</select>

	<h3>{{localize 'SHADOWDARK.item.level'}}</h3>
	{{numberInput
		item.system.level
		name="system.level"
		placeholder="0"
	}}
</div>

