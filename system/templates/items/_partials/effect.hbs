<!-- Effect Category-->
{{#> ui/sd-box
	header-label=(localize "SHADOWDARK.item.effect.category.title")
	header-class="light"
}}
	<select name="system.category">
		{{selectOptions
			config.EFFECT_CATEGORIES
			selected=system.category
			localize=false
		}}
	</select>
{{/ui/sd-box}}

<!-- Effect Duration-->
{{#> ui/sd-box
	header-label=(localize "SHADOWDARK.item.spell_duration")
	header-class="light"
}}
	{{> items/_partials/duration
		base="system.duration"
		duration=system.duration
		type="effect"
		choices=config.EFFECT_DURATIONS
		variableDuration=variableDuration
	}}
{{/ui/sd-box}}
