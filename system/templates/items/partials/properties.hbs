{{#> ui/sd-box
	header-label="Item Properties"
	header-class="light"
}}
	<div class="item-grid">
		{{#if item.system.canBeEquipped}}
			{{#if item.isOwned}}
				<h3>{{localize 'SHADOWDARK.item.equipped'}}</h3>
				<input
					type="checkbox"
					name="system.equipped"
					{{checked system.equipped}}
				>
			{{/if}}
		{{/if}}

		{{#ifEq item.type "Basic"}}
			<h3>{{localize 'SHADOWDARK.item.light.is_source'}}</h3>
			<input
				type="checkbox"
				name="system.light.isSource"
				{{checked system.light.isSource}}
			>
		{{/ifEq}}

		{{#if showMagicItemCheckbox}}
				<h3>{{localize "SHADOWDARK.item.magic_item.is_magic"}}</h3>
				<input
					type="checkbox"
					name="system.magicItem"
					{{checked system.magicItem}}
				>
		{{/if}}

		{{#ifEq item.type "Basic"}}
			<h3>{{localize 'SHADOWDARK.item.treasure'}}</h3>
			<input
				type="checkbox"
				name="system.treasure"
				{{checked system.treasure}}
			>
		{{/ifEq}}

		{{#ifEq item.type "Effect"}}
			<h3>{{localize "SHADOWDARK.item.effect.show-token-icon"}}</h3>
			<input
				type="checkbox"
				name="system.tokenIcon.show"
				{{checked system.tokenIcon.show}}
			/>

			<h3>{{localize "SHADOWDARK.item.effect.show-on-panel"}}</h3>
			<input
				type="checkbox"
				name="system.effectPanel.show"
				{{checked system.effectPanel.show}}
			/>
		{{/ifEq}}
	</div>

{{/ui/sd-box}}
