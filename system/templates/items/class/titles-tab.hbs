<section class="tab tab-titles" data-group="primary" data-tab="tab-titles">

	<div class="SD-banner">{{localize "SHADOWDARK.sheet.item.tab.titles"}}</div>
	<table class="SD-table">
		<tr>
			<th colspan="3" style="text-align:center">{{localize 'SHADOWDARK.class.titles.levels.label'}}</th>
			<th>{{localize 'SHADOWDARK.alignment.lawful'}}</th>
			<th>{{localize 'SHADOWDARK.alignment.chaotic'}}</th>
			<th>{{localize 'SHADOWDARK.alignment.neutral'}}</th>
			<th>&nbsp;</th>
		</tr>
		{{#each item.system.titles}}
			<tr>
				<td style="width:2.5em;text-align:center">
					{{numberInput
						this.from
						name="title.from"
						placeholder="0"
					}}
				</td>
				<td style="padding:0px">-</td>
				<td style="width:2.5em;text-align:center">
					{{numberInput
						this.to
						name="title.to"
						placeholder="0"
					}}
				</td>
				<td>
					<input
						name="title.lawful"
						type="text"
						value="{{ this.lawful }}"
					/>
				</td>
				<td>
					<input
						name="title.chaotic"
						type="text"
						value="{{ this.chaotic }}"
					/>
				</td>
				<td>
					<input
						name="title.neutral"
						type="text"
						value="{{ this.neutral }}"
					/>
				</td>
				<td>
					{{#if ../editable}}
						<a
							data-action="class-title-delete"
							data-index="{{@index}}"
						>
							<i class="fa-solid fa-trash"></i>
						</a>
					{{/if}}
				</td>
			</tr>
		{{/each}}
		<tr>
			<td colspan="7" style="text-align: center;">
				{{#if editable}}
					<a data-action="class-title-add">
						<i class=" fa-solid fa-plus"></i>
					</a>
				{{/if}}
			</td>
		</tr>
	</table>

</section>
